<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memory_item_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/itemCardView"
        style="@style/Theme.MemoryGame.cardView"
        android:layout_height="wrap_content">
        <!--         android:theme="@style/Theme.MemoryGame.cardView" -->

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:contentDescription="Memory Image"
            android:scaleType="fitXY"
            android:background="@drawable/ic_launcher_background"
            />

        <!--  @null on background will remove any button's shadow
        however, the problem was app:srcCompat="@drawable/ic_launcher_background" -->

    </androidx.cardview.widget.CardView>
</LinearLayout>